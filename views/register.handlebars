<h1>REGISTER</h1>
{{#each errors}}
<div>
    <p>{{text}}</p>
</div>
{{/each}}
<form action="/register" method="POST">
<div>
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Name" maxlength="40" value={{name}}>
</div>
<div>
    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="Email@Email.com" value={{email}}>
</div>
<div>
    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="Password" maxlength="40" value={{password}}>
</div>
<div>
    <label for="password2">Repeat your password</label>
    <input type="password" name="password2" id="password2" placeholder="Repeat your Password" maxlength="40" value={{password}}>
</div>
<input type='submit' value='Register'>
</form>