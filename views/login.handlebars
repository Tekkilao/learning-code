<h1>LOGIN</h1>
{{#each errors}}
<div>
    <p>{{text}}</p>
</div>
{{/each}}
<form action="/login" method="POST">
<div>
    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="Email@Email.com" value={{email}}>
</div>
<div>
    <label for="password">Password</label>
    <input type="password" name="password" id="name" placeholder="Name" maxlength="40" value={{password}}>
</div>
<input type='submit' value='Login'>
</form>
<p>    
<a href="/register">Register</a>
</p>